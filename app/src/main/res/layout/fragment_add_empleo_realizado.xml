<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/estilo_layout_fondo">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4"
            style="@style/estilo_scrollview">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/titulo_add_empleo_realizado"
                    android:id="@+id/textView7"
                    android:textColor="#ff000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ffffffff"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/addEmpR_et_puesto"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/puesto"
                    android:background="@drawable/redondeado_edit_text"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:editable="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/addEmpR_et_empresa"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/nombre_empresa"
                    android:background="@drawable/redondeado_edit_text"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:editable="true"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/addEmpR_et_proyecto"
                        android:hint="@string/nombre_proyecto"
                        android:background="@drawable/redondeado_edit_text"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:editable="true"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="@string/temporal"
                        android:id="@+id/checkBox"
                        android:textSize="16dp"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/addEmpR_et_fechaI"
                        android:hint="@string/fecha_inicio"
                        android:background="@drawable/redondeado_edit_text"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:editable="false"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/set"
                        android:id="@+id/addEmpR_btn_setI"
                        android:background="@drawable/button_blue"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/addEmpR_et_fechaF"
                        android:hint="@string/fecha_fin"
                        android:background="@drawable/redondeado_edit_text"
                        android:padding="5dp"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:editable="false"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/set"
                        android:id="@+id/addEmpR_btn_setF"
                        android:background="@drawable/button_blue"
                        android:layout_weight="2" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:background="#ffe7ffde" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="CategorÃ­a:"
                        android:id="@+id/textView12"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#ff000000" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addEmpR_sp_categorias"
                        android:background="@drawable/redondeado_edit_text" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#ffffffff"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal" >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/agregar"
                        android:id="@+id/addEmpR_btn_agregar"
                        android:background="@drawable/button_green"
                        android:textColor="@drawable/button_text_color"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="false"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelar"
                        android:id="@+id/addEmpR_btn_cancelar"
                        android:background="@drawable/button_red"
                        android:textColor="@drawable/button_text_color"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:elegantTextHeight="false"
                        android:singleLine="false"
                        android:layout_marginBottom="5dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
