<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jcaal.sharingjob_v01.gui.login">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/tiene_cuenta"
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:autoText="false"
            android:hint="@string/email" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_pass"
            android:layout_below="@+id/et_email"
            android:layout_alignLeft="@+id/et_email"
            android:layout_alignStart="@+id/et_email"
            android:layout_marginTop="31dp"
            android:hint="@string/password" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingresar"
            android:id="@+id/lo_bt_ingreso"
            android:layout_marginTop="65dp"
            android:layout_below="@+id/et_pass"
            android:layout_alignLeft="@+id/et_pass"
            android:layout_alignStart="@+id/et_pass"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:id="@+id/lo_bt_cancelar"
            android:layout_alignTop="@+id/lo_bt_ingreso"
            android:layout_alignRight="@+id/et_pass"
            android:layout_alignEnd="@+id/et_pass" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_cuenta"
            android:id="@+id/lo_bt_crear"
            android:layout_below="@+id/lo_bt_ingreso"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp" />

    </RelativeLayout>
</FrameLayout>
